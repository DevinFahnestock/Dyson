    "resolveJsonModule": true,
    // "paths": {
    //   "@server/*": ["server/*"],
    //   "@cli/*": ["cli/*"]
    // },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "exclude": ["dist", "node_modules"]
}
